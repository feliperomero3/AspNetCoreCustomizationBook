# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*{.cs, .cshtml}]
indent_style = space
indent_size = 4
end_of_line = crlf

[*{.js, .jsx, .ts, .tsx}]
indent_style = space

[*{.html, .css, .scss, .json, .yml, .yaml}]
indent_style = space

[*{.md, .markdown, .txt}]
trim_trailing_whitespace = false
